<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saadallah.synapps.NetworkDetails">

<RelativeLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/Btn_ReadAll1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:onClick="onbtnclick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Txt_Test"
        android:layout_above="@+id/Text2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Text2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Btn_ReadAll1"
        android:layout_alignEnd="@+id/Btn_ReadAll1"
        android:layout_marginBottom="140dp" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/left_drawer"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:background="@color/myWhite">


    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/notifications"
        android:id="@+id/notif_switch"
        android:textColor="@color/myBlue"
        android:textSize="20sp"
        android:layout_below="@+id/updates_textview"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth"
        android:id="@+id/bluetooth_switch"
        android:textColor="@color/myBlue"
        android:textSize="20sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/connectivity_textview"
        android:textStyle="bold" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/wifidirect"
        android:id="@+id/wifi_switch"
        android:textColor="@color/myBlue"
        android:textSize="20sp"
        android:layout_below="@+id/bluetooth_switch"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectivity"
        android:id="@+id/connectivity_textview"
        android:textColor="@color/myBlue"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updates"
        android:id="@+id/updates_textview"
        android:textColor="@color/myBlue"
        android:layout_below="@+id/wifi_switch"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_data_update"
        android:id="@+id/last_data_update"
        android:textColor="@color/myBlue"
        android:layout_above="@+id/clear_data"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_data"
        android:id="@+id/clear_data"
        android:textColor="@color/myBlue"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:onClick="onClickClearData" />
</RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_clear_data"
    android:background="#DDDDDD"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="190dp"
    android:layout_marginBottom="190dp"
    android:visibility="gone" >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/yes"
        android:id="@+id/popup_yes_button"
        android:background="@color/myBlue"
        android:textColor="@color/myWhite"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:onClick="onClickYes"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/popup_clear_data"
        android:id="@+id/popup_clear_data_textview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/myBlue"
        android:textSize="15dp"
        android:gravity="center|center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/no"
        android:id="@+id/popup_no_button"
        android:background="@color/myBlue"
        android:textColor="@color/myWhite"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/popup_yes_button"
        android:layout_marginRight="50dp"
        android:onClick="onClickNo"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
</android.support.v4.widget.DrawerLayout>



