<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/bluetooth_state"
    android:id="@+id/bt_state"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:textColor="@color/myBlue"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/wifi_state"
    android:id="@+id/wifi_state"
    android:layout_below="@+id/bt_state"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:textColor="@color/myBlue"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/cell_state"
    android:layout_below="@+id/wifi_state"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:text="@string/cell_state"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:textColor="@color/myBlue"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/bt_value"
    android:layout_alignBottom="@+id/bt_state"
    android:layout_toRightOf="@+id/bt_state"
    android:layout_toEndOf="@+id/bt_state"
    android:layout_marginLeft="10dp"
    android:textColor="@color/myBlue" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/wifi_value"
    android:layout_alignBottom="@+id/wifi_state"
    android:layout_toRightOf="@+id/wifi_state"
    android:layout_toEndOf="@+id/wifi_state"
    android:layout_marginLeft="10dp"
    android:textColor="@color/myBlue" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/cell_value"
    android:layout_alignBottom="@+id/cell_state"
    android:layout_toRightOf="@+id/cell_state"
    android:layout_toEndOf="@+id/cell_state"
    android:layout_marginLeft="10dp"
    android:textColor="@color/myBlue" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/phone_nb"
    android:id="@+id/phone_nb"
    android:layout_below="@+id/cell_state"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:textColor="@color/myBlue"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/phone_nb_value"
    android:layout_toRightOf="@+id/phone_nb"
    android:layout_alignBottom="@+id/phone_nb"
    android:layout_marginLeft="10dp"
    android:text="@string/unknown"
    android:textColor="@color/myBlue" />

</RelativeLayout>


<RelativeLayout
    android:id="@+id/left_drawer"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:background="@color/myWhite">


    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/notifications"
        android:id="@+id/notif_switch"
        android:textColor="@color/myBlue"
        android:textSize="20sp"
        android:layout_below="@+id/updates_textview"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth"
        android:id="@+id/bluetooth_switch"
        android:textColor="@color/myBlue"
        android:textSize="20sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/connectivity_textview"
        android:textStyle="bold" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/wifidirect"
        android:id="@+id/wifi_switch"
        android:textColor="@color/myBlue"
        android:textSize="20sp"
        android:layout_below="@+id/bluetooth_switch"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectivity"
        android:id="@+id/connectivity_textview"
        android:textColor="@color/myBlue"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updates"
        android:id="@+id/updates_textview"
        android:textColor="@color/myBlue"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/wifi_switch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_data_update"
        android:id="@+id/last_data_update"
        android:textColor="@color/myBlue"
        android:layout_above="@+id/clear_data"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_data"
        android:id="@+id/clear_data"
        android:textColor="@color/myBlue"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:onClick="onClickClearData" />
</RelativeLayout>

</android.support.v4.widget.DrawerLayout>

